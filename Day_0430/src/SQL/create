-- 일반적인 테이블 생성 방법
CREATE TABLE SAWON(
	SABUN NUMBER(4),
	NAME VARCHAR2(10),
	INDATE DATE,
	PAY NUMBER(7),
	TEL VARCHAR2(14)
);

-- 테이블 내용을 복사해서 생성
CREATE TABLE DEPT_01
AS
SELECT * FROM DEPARTMENT;

SELECT * FROM DEPT_01;

-- 조건을 추가한 테이블 내용 복사 : 구조만 복사해옴
CREATE TABLE DEPT_02
AS
SELECT * FROM DEPARTMENT WHERE 0 = 1;	-- 구조만 복사

SELECT * FROM DEPT_02;