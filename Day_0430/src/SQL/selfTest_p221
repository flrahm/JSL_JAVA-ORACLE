SELECT * FROM EMPLOYEE2
-- 1
CREATE TABLE DEPT(
	DNO NUMBER(2),
	DNAME VARCHAR2(14),
	LOC VARCHAR2(13)
);

-- 2
CREATE TABLE EMP(
	ENO NUMBER(4),
	ENAME VARCHAR2(10),
	DNO NUMBER(2)
);

--3
ALTER TABLE EMP
MODIFY ENAME VARCHAR2(25);

--4
CREATE TABLE EMPLOYEE2(
	EMP_ID,NAME,SAL,DEPT_ID
) AS
SELECT ENO,ENAME,SALARY,DNO FROM EMPLOYEE;

--5
DROP TABLE EMP;

--6
RENAME EMPLOYEE2 TO EMP;

--7
ALTER TABLE DEPT
DROP COLUMN DNAME;

--8
ALTER TABLE DEPT
SET UNUSED(LOC);

--9
ALTER TABLE DEPT
DROP UNUSED COLUMNS;
