
--1

CREATE TABLE EMP_SAMPLE AS
SELECT * FROM EMPLOYEE WHERE 1=0;

ALTER TABLE EMP_SAMPLE
ADD CONSTRAINT EMP_SAMPLE_ENO_PK PRIMARY KEY(ENO);

SELECT * FROM USER_CONSTRAINTS
WHERE TABLE_NAME IN('EMP_SAMPLE');

--2

CREATE TABLE DEPT_SAMPLE AS
SELECT * FROM DEPT WHERE 1=0;

ALTER TABLE DEPT_SAMPLE
ADD CONSTRAINT DEPT_SAMPLE_DNO_PK PRIMARY KEY(DNO);

SELECT * FROM USER_CONSTRAINTS
WHERE TABLE_NAME IN('DEPT_SAMPLE');

--3
ALTER TABLE EMP_SAMPLE
ADD CONSTRAINT EMP_SAMPLE_DEPT_FK
FOREIGN KEY(DNO) REFERENCES DEPARTMENT(DNO);

SELECT * FROM USER_CONSTRAINTS
WHERE TABLE_NAME IN('DEPT_SAMPLE');

--4
ALTER TABLE EMP_SAMPLE
ADD CHECK(COMMISSION > 0);


